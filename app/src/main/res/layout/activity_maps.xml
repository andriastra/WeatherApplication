<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.weatherapplication.view.MapsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_map_marker"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:contentDescription="title_find_location"
        app:srcCompat="@drawable/ic_map_marker" />

        <TextView
            android:id="@+id/tv_finish"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_btn_finish"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Pilih"
            android:textColor="@color/white"
            android:textSize="14sp" />

</RelativeLayout>

